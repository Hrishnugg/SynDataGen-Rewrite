# SynDataGen Environment Variables Example
# Copy this file to .env and fill in the values for your environment

# MongoDB Configuration (Legacy)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=syndatagen

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Migration Settings
MIGRATION_VERBOSE=false
MIGRATION_VALIDATE_ONLY=false
MIGRATION_DRY_RUN=false
MONGODB_BATCH_SIZE=100
FIRESTORE_BATCH_SIZE=500

# Collection Names (Optional - if you need to customize)
MONGO_CUSTOMERS_COLLECTION=customers
MONGO_WAITLIST_COLLECTION=waitlist
MONGO_PROJECTS_COLLECTION=projects
MONGO_JOBS_COLLECTION=dataJobs
FIRESTORE_CUSTOMERS_COLLECTION=customers
FIRESTORE_WAITLIST_COLLECTION=waitlist
FIRESTORE_PROJECTS_COLLECTION=projects
FIRESTORE_JOBS_COLLECTION=dataJobs

# Application Settings
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_ENABLE_GCP_FEATURES=true

# Security Settings
JWT_SECRET=your-jwt-secret-at-least-32-chars-long
SESSION_SECRET=your-session-secret-key

# Storage Settings
DEFAULT_STORAGE_REGION=us-central1
DEFAULT_STORAGE_CLASS=STANDARD

# Logging Settings
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false

# Firestore Backup and Restore Settings
GCP_BACKUP_BUCKET=your-gcp-project-id-firestore-backups
BACKUP_DEFAULT_COLLECTIONS=customers,waitlist,projects,dataGenerationJobs
BACKUP_RETENTION_DAYS=30

# Firestore Monitoring and Alerting Settings
ENABLE_FIRESTORE_MONITORING=true
ALERT_NOTIFICATION_EMAIL=alerts@yourdomain.com
FIRESTORE_READ_ALERT_THRESHOLD=5000
FIRESTORE_WRITE_ALERT_THRESHOLD=1000
FIRESTORE_STORAGE_ALERT_THRESHOLD_GB=5
FIRESTORE_CONNECTION_ALERT_THRESHOLD=100

# Firestore Cost Analysis Settings
FIRESTORE_BUDGET_AMOUNT=100
FIRESTORE_BUDGET_ALERT_THRESHOLDS=50,80,100
COST_GROWTH_FACTOR=1.1

# Firebase/Firestore Configuration
# Option 1: Use service account credentials directly
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Option 2: Alternative naming (both work)
# GOOGLE_PROJECT_ID=your-project-id
# GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
# GOOGLE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Option 3: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Database configuration
DATABASE_URL="your-database-url"

# Other API keys
# Add any other required API keys here 